    float left
    margin-left -5px
    margin-top 10px

    .label
        display inline-block
        min-width 75px
        padding 0
        line-height 24px
        background-color #fc6e22
        color #fff
        text-align center
        border-radius 0px
        font-size 14px

        &.procuratorate
            background-color #bbdefb
            color #1274ac
            padding-right 5px

        &.court
